{% extends "IntechnologyBackendManagementBundle::layout.html.twig" %}

{% block int_login_content %}
    <div class="row login-form-container">
        <div class="header">
            LOGIN
        </div>
        <div class="login-form">
            <div class="errors">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData) }}</div>
                {% endif %}
            </div>

            <form action="{{ path('login_check') }}" method="post">
                <div class="form-row">
                    <div><label for="username">Email address:</label></div>
                    <div><input type="text" id="username" name="_username" value="{{ last_username }}" /></div>
                </div>

                <div class="form-row">
                    <div><label for="password">Password:</label></div>
                    <div><input type="password" id="password" name="_password" /></div>
                </div>

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <div class="form-row">
                    <div class="submit"><button type="submit">Login</button></form></div>
                </div>
            </form>
        </div>
    </div>
{% endblock int_login_content %}
